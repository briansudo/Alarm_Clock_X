<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="16dp"
              android:background="@color/gray">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alarm_hour_textview"
                style="@style/AppThemeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="9"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/alarm_time_textview"
                style="@style/AppThemeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text=":"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/alarm_min_textview"
                style="@style/AppThemeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="00"
                android:textSize="36sp" />

            <!--<TextView-->
                <!--android:id="@+id/am_pm_textview"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="14sp"-->
                <!--android:text="PM"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/alarm_name_textview"
            style="@style/AppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I don't have a good alarm name"
            android:minHeight="20dp"/>

        <TextView
            android:id="@+id/alarm_repeated_days_textview"
            style="@style/AppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Sun"
            android:minHeight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/alarm_enable_textview"
            style="@style/AppThemeText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/list_item_alarm_off"
            android:textColor="@color/off"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_action_edit" />

            <ImageView
                android:id="@+id/delete_alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_action_discard"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>